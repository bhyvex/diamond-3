<!DOCTYPE html>
<html lang="{{ g.param('lang', 'en') }}" dir="{{ g.param('dir', 'ltr') }}">
<head>
  <!-- Diamond v{{ g.version }} -->

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <title>
    {% block title %}{% endblock %} / {{ g.param('title', 'Diamond wiki') }}
  </title>

  <meta name="description" content="{{ g.param('description',
    'Diamond wiki, the metadata enabled wiki engine') }}">

  <link rel="shortcut icon" type="image/x-icon"
    href="{{ g.param('favicon', '/static/diamond.ico') }}" />

  <link rel="stylesheet" href="/static/normalize.css">
  <link rel="stylesheet" href="/static/diamond-ng.css">

  <style>{{ g.param('css', '') }}</style>
</head>
<body class="{{ g.param('classes', 'diplomat') }}">
  <div class="container">

    <div class="header">
      <div class="title">
        <a href="/">
          {{ g.param('title', 'Diamond wiki') }}
        </a>
      </div>

      <a href="#menu" class="menu-link hidden-m">
        <span></span>
        <span></span>
        <span></span>
      </a>

      <div id="#menu" class="menu hidden-s visible-m">
        {{ menu.body | format }}
      </div>

      <div class="auth">
        {% if current_user.is_authenticated %}
          <a href="/{{ current_user.slug }}" class="wikilink signed-in">
            {{ current_user.name }}</a>
          <span>/</span>
          <a href="/sign-out" class="sign-out">Sign out</a>
        {% else %}
          <a href="/sign-in" class="sign-in">Sign in</a>
          <span>/</span>
          <a href="/sign-up" class="sign-up">Sign up</a>
        {% endif %}
      </div>
    </div>

    {% for message in get_flashed_messages() %}
      <div class="flash">{{ message }}</div>
    {% endfor %}

    <div {{ 'data-slug="' + page.slug + '"' if page is defined else '' }}
      class="document">
      <div class="main">
        {% if help %}
          <div class="help">
            {{ help.body | format }}
          </div>
        {% endif %}

        {% block body %}{% endblock %}
      </div>

      <div class="sidebar">
        <div class="meta">
          {% block meta %}{% endblock %}
        </div>
      </div>
    </div>

  </div>

  <script src="/static/zepto-min.js"></script>

  {% block extra %}{% endblock %}

  <script>
    $(function($) {

      // Automatic backlinks
      $('.document[data-slug]').each(function () {
        var $h1 = $('.document h1').first();

        $h1.append(' '
          + '<a class="backlink" href="/search?query=[[' + $h1.text() + ']]">'
            + 'â†©'
          + '</a>');
      });

      // Menu opening/closing
      $('.header .menu-link').on('click', function () {
        $('.header .menu,.header .menu-link')
          .toggleClass('open');
      });

      // Flash messages acknowledgment
      $('.flash').on('click', function () {
        $(this).hide();
      });

      // Diff form handling
      $('.diff-button').on('click', function () {
        var href = $(this).attr('href');
        var a = $('input[name=version-a]:checked').val();
        var b = $('input[name=version-b]:checked').val();

        if (a && b) {
          document.location = href + '/' + a + '/' + b;
        }

        return false;
      });

      // Preview handling
      $('.button-preview').on('click', function () {
        var pos = $(this).offset();
        var val = $('form.edit textarea').val();

        var payload = 'body=' + encodeURIComponent(val);

        $.post('/preview', payload, function (res, status) {
          if (status === 'success') {
            $('.preview').html('<hr />' + res);
            $('body').scrollTop(pos.top);
          }
        });
      });

      // Advanced editor handling
      if (window.CodeMirror) {
        $('.editor').each(function () {
          CodeMirror.fromTextArea(this, {
            lineWrapping: true,
          });
        });
      }

    });
  </script>
</body>
</html>
