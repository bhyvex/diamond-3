{% extends "skeleton.j2" %}

{% block title %}
  Recent changes
{% endblock %}

{% block body %}
  <table>
    <tr>
      <th>Timestamp</th>
      <th>Title</th>
      <th>Author</th>
      <th>Comment</th>
    </tr>

    {% for item in changes %}
      <tr>
        <td>
          {{ item.ymd_hm }}
        </td>
        <td>
          <a href="/{{ item.name }}" class="wikilink">{{ item.title }}</a>
        </td>
        <td>
          {% if item.user %}
            <a href="/{{ item.user.slug }}" class="wikilink">
              {{ item.user.name }}
            </a>
          {% endif %}
        </td>
        <td>
          {{ item.comment or '' }}
        </td>
      </tr>
    {% endfor %}
  </table>
{% endblock %}
