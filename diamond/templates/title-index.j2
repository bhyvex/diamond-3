{% extends "skeleton.j2" %}

{% block title %}
  {{ _('Title index') }}
{% endblock %}

{% block body %}
  <div class="help">
    <h1>{{ _('Title index') }}</h1>

    <p>{{ _('This page lists all existing pages in the wiki. Use this page to
      discover pages.') }}</p>
  </div>

  <div class="title-index">
    <p>
      <center>
        {% for initial, pages in titles | groupby('initial') %}
          <a href="#entry_{{ initial }}">{{ initial | upper }}</a>
        {% endfor %}
      </center>
    </p>

    <ul>
      {% for initial, pages in titles | groupby('initial') %}
        <center>
          <h3>
            <a id="entry_{{ initial }}" href="#entry_{{ initial }}">
              {{ initial | upper }}
            </a>
          </h3>
        </center>

        {% for page in pages %}
          <li>
            <a href="/{{ page.slug }}" class="wikilink">{{ page.title }}</a>
          </li>
        {% endfor %}
      {% endfor %}
    </ul>
  </div>
{% endblock %}
