{% extends "skeleton.j2" %}

{% block title %}
  {{ _('Activation') }}
{% endblock %}

{% block body %}
  <div class="help">
    <h1>{{ _('Activation') }}</h1>

    <p>{{ _('This will make this version of the page active. It will then
      become visible to all users through links and searches.') }}</p>
  </div>

  <div class="activate">
    <form method="POST">
      <input type="hidden" name="_csrf_token" value="{{ g.csrf_token() }}">

      <fieldset>
        <legend class="sr">{{ _('Page activation') }}</legend>

        <div class="form-row">
          <input type="submit" value="{{ _('Activate') }}" class="full-w">
        </div>
      </fieldset>
    </form>
  </div>
{% endblock %}
