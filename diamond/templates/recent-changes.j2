{% extends "skeleton.j2" %}

{% import "macros.j2" as macros %}

{% block title %}
  Recent changes
{% endblock %}

{% block body %}
  <div class="recent-changes">
    <table>
      <tr>
        <th>Timestamp</th>
        <th>V.</th>
        <th>Title</th>
        <th>Author</th>
        <th>Comment</th>
      </tr>

      {% for item in changes.items %}
        <tr>
          <td>
            {{ item.ymd_hm }}
          </td>
          <td>
            <a href="/{{ item.slug }}?version={{ item.id }}" class="wikilink">
              {{ item.id }}{{ '*' if item.active else ''}}
            </a>
          </td>
          <td>
            <a href="/{{ item.slug }}" class="wikilink">{{ item.title }}</a>
          </td>
          <td>
            {% if item.user %}
              <a href="/{{ item.user.slug }}" class="wikilink">
                {{ item.user.name }}
              </a>
            {% endif %}
          </td>
          <td>
            {{ item.comment or '' }}
          </td>
        </tr>
      {% endfor %}
    </table>

    {{ macros.render_pagination(changes, 'recent_changes') }}
  </div>
{% endblock %}
